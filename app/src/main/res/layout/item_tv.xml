<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:id="@+id/lvParentTv">

    <ImageView
        android:id="@+id/ivTvPoster"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/TvPosterText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tvTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="@string/title_tv_show"/>

        <TextView
            android:id="@+id/tvTvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/tv_release_date"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/tvTvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/tv_rating"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

</LinearLayout>