<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/languages">

        <Preference
            app:key="language"
            app:title="@string/change_language_settings"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notification">

        <SwitchPreferenceCompat
            app:key="notification7am"
            app:title="Receive Notification Every Day"
            app:summaryOn="@string/daily_notification_7AM"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="notification8am"
            app:summaryOn="@string/daily_notification_8AM"
            app:title="Receive Notification Every New Movie"
            app:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>
